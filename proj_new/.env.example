# Environment variables for Docker Compose

# MySQL
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=pet_adoption
MYSQL_USER=petuser
MYSQL_PASSWORD=petpassword

# MinIO
MINIO_ROOT_USER=minioadmin123
MINIO_ROOT_PASSWORD=minioadmin123

# Flask
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-change-this
JWT_SECRET_KEY=your-production-jwt-secret-key-change-this

# SMTP Email Configuration (Optional - for sending emails)
# If not configured, emails will only be logged to console
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_FROM=your-email@gmail.com

# Frontend
VITE_API_BASE_URL=http://localhost:5000/api
